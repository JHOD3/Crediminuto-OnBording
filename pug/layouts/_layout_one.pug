                                a(href="/").navbar-brand.text-primary.font-1-70-vh.font-1-70-vh-md
                                    i.fa-solid.fa-angle-left
                                    span.p-2 Volver
                        if page_datos.back === true
                            .container-fluid.justify-content-between.d-flex.pt-md-0.py-2.pb-md-0
                                a(href="/").navbar-brand.text-primary.font-25-px.d-md-none
                                        i.fa-solid.fa-angle-left
                                a(href="/").navbar-brand
                                    img(src="image/logo-crediminuto.svg", alt="").py-md-3.logo
                                div.d-md-flex.d-block
                                    if page_datos.cliente === true
                                        div.d-md-flex.d-none
                                            img(src="image/icono-user.svg").img-w-5-vh-md
                                            div.ms-3(style="line-height:2vh")
