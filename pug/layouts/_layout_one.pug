                                .text-center.text-white.font-1-80-vh.font-1-80-vh-md.col-md-9.col-sm-10.mx-auto.fw-light   !{text_2}
                            if ol != false
                                ol.text-white.col-md-10.col-sm-10.mx-auto.mt-md-4.ps-md-5
                                    each val in ol
                                        li.font-1-80-vh.font-1-80-vh-md.fw-light #{val}
                            if ol2 != false
                                ol.text-white.col-md-10.col-sm-10.mx-auto.mt-md-4.mt-4
                                    li.d-flex.align-items-center.font-2-vh-md.font-2-vh  #[img(src="image/icono-number-1.png").img-w-4-vh.img-w-5-vh-md.me-2]
