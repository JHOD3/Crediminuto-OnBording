                                img(src="image/icono-user.svg").img-w-5-vh
                                div.ms-3(style="line-height:2vh")
                                    div.font-1-3-vh CLIENTE
                                    div.font-2-10-vh.text-primary #[b Juan Pérez Moreno]
                            if page_datos.phone === true
                                .d-flex.mt-3.pb-1.align-items-center.pt-md-5
                                    img(src="image/icono-phone-2.svg").img-w-5-vh.img-w-6-vh-md
                                    div.ms-3.align-items-center.line-h.line-h-md
                                        div.font-1-3-vh.font-1-80-vh-md EQUIPO ADQUIRIDO
                                        div.font-2-10-vh.font-3-vh-md.text-primary #[b Xiaomi Redmi 9A 128GB]
                    if  page_datos.phone === true
                        .border-bottom-m.mt-3.pb-3.d-md-block.d-none
                            if page_datos.phone === true
                                .d-flex.mt-3.pb-1.align-items-center.pt-md-5
                                    img(src="image/icono-phone-2.svg").img-w-5-vh.img-w-6-vh-md
                                    div.ms-3.align-items-center.line-h.line-h-md
                                        div.font-1-3-vh.font-1-80-vh-md EQUIPO ADQUIRIDO
                                        div.font-2-10-vh.font-3-vh-md.text-primary #[b Xiaomi Redmi 9A 128GB]
                    block content_right                
            .col-md-5.order-2.order-md-1#down-card.card-radius-down
                .bg-primary.h-100
                    a(href="").position-absolute.text-primary.arrow-control#arrow
                        img(src="", alt="", width="60").arrow-up
                    div
                        .col-sm-11.col-12.mx-auto.d-block.d-md-none.message-top
