block content_right
    form(id="form-datos-personales").pt-6-89-vh-md.pt-4-vh
        .text-primary.text-center.text-md-start.mb-3
            span.pl-1-vh.font-2-40-vh-md.font-2-50-vh.fw-normal Resumen para pago
        div.bg-light.bg-opacity-50.p-md-5.px-4.py-5
            div.row
                span.col-md-4.col-6.font-1-80-vh.font-1-80-vh-md.text-black-50   Precio del equipo
                span.col-md-6.col-6.font-1-80-vh.font-1-80-vh-md  $1.000.000
