block content_right
    form(id="form-selected.device").pt-6-89-vh-md.pt-4-vh.mb-5
        .text-primary.aling-items-center.d-flex
            i.fa-solid.fa-circle-check.font-3-vh-md.font-3-vh.mt-1.mt-md-1
            span.pl-1-vh.font-2-40-vh-md.font-2-50-vh.fw-normal 05. Selección de dispositivo
        div.mt-2.mt-md-4.col-md-8.pt-10-px-md.pt-20-px
            label.form-label.ps-2.ms-1.font-1-5-vh-md MARCA DEL EQUIPO
            select.form-select
                option 1
                option 2
                option 3
                option 4
        div.mt-4.col-md-8.pt-10-px-md.pt-10-px
            label.form-label.ps-2.ms-1.font-1-5-vh-md MODELO (INGRESA LAS PRIMERAS LETRAS)
            input(type="text", name="last_name", placeholder="Ingresa las primeras letras del modelo").form-control
        div.mt-4.col-md-8.pt-10-px-md.pt-10-px
            label.form-label.ps-2.ms-1.font-1-5-vh-md MONTO DEL DISPOSITIVO
            input(type="number", name="document", placeholder="$120.000").form-control
        .mt-5.pt-md-2.justify-content-center.d-flex.d-md-block.justify-content-md-start
            button(type="submit", disabled="true").btn.btn-primary.btn-lg.ms-md-4.continuar-btn.font-14-xs CONTINUAR
