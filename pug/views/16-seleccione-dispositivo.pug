extends ../layouts/_layout_one
block variables

    - var page_datos = { title: 'crediminuto || Seleccione dispositivo', back: true, cliente:true}
    - var   text_1  =   "<p class='mb-2 mb-md-0'>¡Importante!</p>";
    - var   text_2  =   "Para seleccionar el modelo escribir las<br class='d-md-block d-none'> primeras<br class='d-md-none d-block'> letras del quipo en el campo<br class='d-md-block d-none'> y seleccionar el<br class='d-md-none d-block'> equipo requerido.";
    - var   text_3  =   false;
    - var   ol      =   false;
    - var   ol2     =   false;
    - var   img     =   "elemento-13.svg";
block style
    link(rel="stylesheet",  href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css")
    link(rel="stylesheet",  href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css")
    link(rel="stylesheet",  href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.rtl.min.css")
block content_right
    form(id="form-selected-device").pt-6-89-vh-md.pt-4-vh.mb-5
        .text-primary.aling-items-center.d-flex
            i.fa-solid.fa-circle-check.font-3-vh-md.font-3-vh.mt-1.mt-md-1
            span.pl-1-vh.font-2-40-vh-md.font-2-50-vh.fw-normal 05. Selección de dispositivo
        div.mt-2.mt-md-4.col-md-8.pt-10-px-md.pt-20-px
            label.form-label.ps-2.ms-1.font-1-5-vh-md MARCA DEL EQUIPO
            select#marca.form-select(data-placeholder='Seleccionar...', name="marca")
                option
                option Reactive
                option Solution
                option Conglomeration
                option Algoritm
                option Holistic
        div.mt-4.col-md-8.pt-10-px-md.pt-10-px
            label.form-label.ps-2.ms-1.font-1-5-vh-md MODELO (INGRESA LAS PRIMERAS LETRAS)
            select#modelo.form-select(data-placeholder='Seleccionar...', name="modelo")
                option
                option Reactive
                option Solution
                option Conglomeration
                option Algoritm
                option Holistic
                option Solution
                option Conglomeration
                option Algoritm
                option Holistic
                option Reactive
                option Solution
                option Conglomeration
                option Algoritm
                option Holistic
                option Solution
                option Conglomeration
                option Algoritm
                option Holistic
        div.mt-4.col-md-8.pt-10-px-md.pt-10-px
            label.form-label.ps-2.ms-1.font-1-5-vh-md MONTO DEL DISPOSITIVO
            input(type="number", name="monto", placeholder="$120.000").form-control
        .mt-5.pt-md-2.justify-content-center.d-flex.d-md-block.justify-content-md-start
            button(type="submit", disabled).btn.btn-primary.btn-lg.ms-md-4.continuar-btn.font-14-xs CONTINUAR
block script
    script(src="js/script-page/16-seleccione-dispositivo.js")
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js")
    script.
        $('#marca').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
        }).on('change', function (e) {
            form.find($(this)).valid();
        });

        $('#modelo').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
        }).on('change', function (e) {
            form.find($(this)).valid();
        });
