block variables

    - var page_datos = { title: 'crediminuto || Seleccione dispositivo', back: true, cliente:true}
    - var   text_1  =   "<p class='mb-2 mb-md-0'>¡Importante!</p>";
    - var   text_2  =   "Para seleccionar el modelo escribir las<br class='d-md-block d-none'> primeras<br class='d-md-none d-block'> letras del quipo en el campo<br class='d-md-block d-none'> y seleccionar el<br class='d-md-none d-block'> equipo requerido.";
    - var   text_3  =   false;
    - var   ol      =   false;
