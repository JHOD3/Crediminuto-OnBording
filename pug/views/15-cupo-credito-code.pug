extends ../layouts/_layout_one
block variables

    - var page_datos = { title: 'crediminuto || Envío de SMS', back: true, cliente:true}
    - var   text_1  =   "¡Excelente!";
    - var   text_2  =   "Sólo queda validar el código para que <br class='d-md-block d-none'> ya pueda disponer del mismo al momento.";
    - var   text_3  =   false;
    - var   ol      =   false;
    - var   ol2     =   false;
    - var   img     =   "elemento-12.svg";

block content_right
    form(id="form-validate-code").pt-6-89-vh-md.pt-4-vh.mb-5
        .text-primary.aling-items-center.d-flex
            i.fa-solid.fa-circle-check.font-3-vh-md.font-3-vh.mt-1.mt-md-1
            span.pl-1-vh.font-2-40-vh-md.font-2-50-vh.fw-normal 05. Cupo Crédito
        .font-2-vh-md.fw-light.font-2-vh.mt-4.pt-2 Código recibido en la APP de Crediminuto
        div.col-md-10.col-10.mx-auto.d-flex.mt-5.justify-content-center.justify-content-md-start.align-items-center.d-md-inline-flex
            div.input-group
                input(type="text", name="code_1", data-type="number-limit",   placeholder="0" required, maxlength="1").form-control.input-code.me-md-3.me-3.text-center
                input(type="text", name="code_2", data-type="number-limit",   placeholder="0" required, maxlength="1").form-control.input-code.me-md-3.me-3.text-center
                input(type="text", name="code_3", data-type="number-limit",   placeholder="0" required, maxlength="1").form-control.input-code.me-md-3.me-3.text-center
                input(type="text", name="code_4", data-type="number-limit",   placeholder="0" required, maxlength="1").form-control.input-code.text-center
            div#check-code.ms-md-4.d-none.text-center.text-md-start
                i.fa-solid.fa-check.font-40-md.text-success
        div#error
        div.text-primary.mt-md-3.mt-3.text-md-start.text-center#time-code
        .mt-5.pt-md-5.justify-content-between.d-flex.d-md-block.justify-content-md-start
            button(disabled).btn.btn-outline-primary.btn-lg.font-14-xs#resend-code REENVIAR CÓDIGO
            button(type="submit", disabled).btn.btn-primary.btn-lg.ms-md-4.continuar-btn.font-14-xs VALIDAR
block script
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery.countdown/2.2.0/jquery.countdown.min.js")
    script(src="js/script-page/15-cupo-credito.js")